{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": [
			"es2020"
		],
		"outDir": "dist", // Ensure this matches your webpack output path
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}